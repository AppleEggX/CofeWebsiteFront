@model IEnumerable<CofeWebApplication.Models.Basket>

@{
    //ViewBag.itemInbasket = InBasketItems;
    }

<h2>Item in the basket</h2>

<p>
    @Html.ActionLink("Check Out", "Checkout", new { id = Model.First().Id })
</p>
<dl class="dl-horizontal">
    <dt>
        Total Price
    <dt>
    <dd>
        @Html.DisplayFor(model => model.First().SumPrice)
    </dd>
</dl>

<table class="table">
    <tr>
        <th>
            Item Name
        </th>
        <th>
            Amount
        </th>
        <th>
            Price
        </th>
    </tr>
    @foreach (var item in ViewBag.items)
    {
        <tr>
            <td>
                @item.CoffeeName
            </td>
            <td>
                @item.Amount
            </td>
            <td>
                @item.TotalPrice
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

