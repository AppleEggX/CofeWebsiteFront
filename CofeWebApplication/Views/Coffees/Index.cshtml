@model IEnumerable<CofeWebApplication.Models.Coffee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    
    @using (Html.BeginForm("Index", "Coffees", FormMethod.Get))
    {
    <p>
        Coffee Type: @Html.DropDownList("coffeeType", "All")
        Title: @Html.TextBox("searchName") @*<br />*@
        <input type="submit" value="Filter" />
    </p>
    }

</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TastingNote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Story)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Storage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TastingNote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Story)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Storage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            
                <td>
                    @if (User.IsInRole("Admin"))
                     {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <br/>;
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id });
                     }

                    @Html.ActionLink("Detail", "Details", new { id = item.Id }) 
                    @if (!User.IsInRole("Admin"))
                     {
                        @Html.ActionLink("Add Basket", "AddToBasket", new { id = item.Id })
                     }


                </td>
            </tr>
        }

    </table>
